{
	// https://nuxt.com/docs/guide/concepts/typescript
	"extends": "./.nuxt/tsconfig.json",
	"compilerOptions": {
		"target": "esnext",
		"jsx": "preserve",
		"lib": [
			"esnext",
			"dom"
		],
		"useDefineForClassFields": true,
		// "resolveJsonModule": true, было
		"baseUrl": "./src",
		"module": "esnext",
		"moduleResolution": "node",
		"paths": {
			"@/*": [
				"*"
			]
		},
		"types": [
			"vite/client",
			"element-plus/global"
		],
		"strict": true,
		"strictNullChecks": false,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"components.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
